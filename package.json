{
	"name": "politigraph",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npm run genql && npm run auth:migrate && nuxt dev",
		"build": "npm run genql && nuxt build",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"prepare": "husky",
		"postinstall": "nuxt prepare",
		"format": "prettier --write --ignore-unknown --ignore-path .gitignore .",
		"genql": "tsx scripts/generate-genql.ts",
		"auth:generate": "npx @better-auth/cli generate",
		"auth:migrate": "npx @better-auth/cli migrate --y",
		"db:pull": "rsync -azvP --delete politigraph:/var/server/politigraph/neo4j/data .neo4j"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"dependencies": {
		"@apollo/server": "^4.11.2",
		"@as-integrations/h3": "^1.2.1",
		"@carbon/icons-vue": "^10.108.0",
		"@carbon/vue": "^3.0.24",
		"@graphql-tools/utils": "^10.6.2",
		"@neo4j/graphql": "^6.5.2",
		"@nuxt/content": "^3.6.2",
		"@tanstack/vue-form": "^1.8.0",
		"@vueuse/core": "^13.9.0",
		"@vueuse/nuxt": "^13.9.0",
		"better-auth": "^1.2.8",
		"better-sqlite3": "^12.0.0",
		"d3-dsv": "^3.0.1",
		"d3-scale-chromatic": "^3.1.0",
		"dagre": "^0.8.5",
		"dayjs": "^1.11.13",
		"fastest-levenshtein": "^1.0.16",
		"graphql-ws": "^5.16.2",
		"neo4j-driver": "^5.27.0",
		"nuxt": "^3.14.1592",
		"prettier": "^3.6.2",
		"radash": "^12.1.0",
		"v-network-graph": "^0.9.21",
		"vue": "latest",
		"vue-router": "latest"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.2.8",
		"@commitlint/cli": "^19.6.0",
		"@commitlint/config-conventional": "^19.6.0",
		"@genql/cli": "^6.3.3",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/better-sqlite3": "^7.6.12",
		"@types/d3-dsv": "^3.0.7",
		"@types/d3-scale-chromatic": "^3.1.0",
		"@types/dagre": "^0.7.53",
		"eslint": "^9.25.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.20.3"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
