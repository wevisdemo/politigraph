{
	"name": "politigraph",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npm run genql && npm run auth:migrate && nuxt dev",
		"build": "npm run genql && nuxt build",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"prepare": "husky",
		"postinstall": "nuxt prepare",
		"format": "prettier --write --ignore-unknown --ignore-path .gitignore .",
		"genql": "node scripts/genql-generate.js",
		"auth:generate": "npx @better-auth/cli generate --output migrations",
		"auth:migrate": "npx @better-auth/cli migrate --y"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"dependencies": {
		"@apollo/server": "^4.11.2",
		"@as-integrations/h3": "^1.2.1",
		"@carbon/icons-vue": "^10.108.0",
		"@carbon/vue": "^3.0.24",
		"@escape.tech/graphql-armor": "^3.1.2",
		"@graphql-tools/utils": "^10.6.2",
		"@mermaid-js/layout-elk": "^0.1.7",
		"@neo4j/graphql": "^6.5.2",
		"@tanstack/vue-form": "^1.8.0",
		"better-auth": "^1.0.22",
		"better-sqlite3": "^11.7.0",
		"dayjs": "^1.11.13",
		"eslint": "^9.25.1",
		"graphql-ws": "^5.16.2",
		"mermaid": "^11.5.0",
		"neo4j-driver": "^5.27.0",
		"nuxt": "^3.14.1592",
		"radash": "^12.1.0",
		"vue": "latest",
		"vue-router": "latest"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.0.22",
		"@commitlint/cli": "^19.6.0",
		"@commitlint/config-conventional": "^19.6.0",
		"@genql/cli": "^6.3.3",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/better-sqlite3": "^7.6.12",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"prettier": "^3.4.2",
		"tailwindcss": "^4.0.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
