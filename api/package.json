{
	"name": "@politigraph/api",
	"version": "1.0.0",
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server src/index.ts",
		"auth:generate": "bunx --bun @better-auth/cli generate",
		"auth:migrate": "bunx --bun @better-auth/cli migrate --y"
	},
	"dependencies": {
		"@apollo/server": "^4.11.2",
		"@better-auth/cli": "^1.3.34",
		"@elysiajs/apollo": "^1.4.0",
		"@politigraph/graphql": "workspace:*",
		"better-auth": "^1.3.34",
		"elysia": "^1.4.16",
		"neo4j-driver": "^5.27.0"
	},
	"devDependencies": {
		"bun-types": "latest"
	}
}
